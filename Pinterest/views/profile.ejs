<%- include('partials/header') %>
	<div class="profile w-full min-h-screen bg-zinc-800 text-white pt-1">
		<form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
			<input type="file" name="image">
		</form>
		<div class="profdets flex flex-col items-center mt-15">
			<div class="relative">
			<span id="uploadicon" class="w-8 h-8 absolute bottom-0 right-0 rounded-full flex items-center jutify-center bg-zinc-200 "><i class="px-2 text-zinc-800 ri-pencil-fill"></i></span>
			<div class="w-32 h-32 bg-zinc-200 rounded-full overflow-hidden border-2">
				<img class="w-full h-full object-cover" src="/images/uploads/<%= user.profileImage ? user.profileImage : 'default.png' %>" alt="loading">
			</div>
			</div>
			<h1 class="text-3xl font-semibold mt-5"><%= user.fullname%></h1>
			<h3 class="text-md">@<%= user.username%></h3>
			<a href="/edit" class="mt-5 px-7 py-2 bg-zinc-700 rounded-full text-xs font-semibold">Edit</a>
			<a href="/add" class="px-10 py-2 rounded-lg bg-red-700 text-xs font-semibold mt-5">Add Post</a>
		</div>
		<div class="card flex flex-wrap gap-10 px-10 mt-10">
			<div class="card shadow-black">

			<div class ="w-72 h-52 bg-zinc-200 rounded-lg overflow-hidden">
				<img class="w-full h-full object-cover" src="/images/uploads/<%= user?.posts[0]?.image%>" alt="Loading">
			</div>
			<a href="/show/posts"class="inline-block text-xl font-semibold mt-3">Your Pins</a>
			<h5 class ="text-sm font-semibold opacity-60 "><%= user.posts.length %></h3>
			</div>
		</div>
	</div>
	<script>
		document.querySelector("#uploadicon").addEventListener("click",function(){
			document.querySelector("#uploadform input").click();
		})
		document.querySelector("#uploadform input").addEventListener("change",function(){
			document.querySelector("#uploadform").submit();
		})
	</script>
<%- include('partials/footer') %>
